[Unit]
Description=Harbor Runner Frontend (Next.js)
After=network.target harbor-backend.service

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/tbench-harbor-runner/frontend
Environment="PATH=/usr/bin:/usr/local/bin"
Environment="NODE_ENV=production"
ExecStart=/usr/bin/npm run start
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
